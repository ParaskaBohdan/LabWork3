@model IEnumerable<LabWork3.Models.Student>
@{
    ViewBag.Title = "Вхід";
    Layout = "_Layout";
}

<h4>Список студентів</h4>

<table class="table" style="margin-top: 15px">
    <thead class="bg-warning bg-opacity-25">
        <tr>
            <th>Код</th>
            <th>
                Прізвище
            </th>
            <th>
                Група
            </th>
        </tr>
    </thead>
    <tbody>

        @{
            var i = 0;

            foreach (var item in Model)
            {
                i++;
                <tr class="@(i % 2 == 1 ? "bg-warning bg-opacity-10" : "")">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
